{
  "name": "scm_rx_inventory_oliveai",
  "version": "1.0.1",
  "description": "Olive Loop to manage Supply Chain Rx Inventory system using Predictive Analytics AI",
  "main": "src/index.ts",
  "scripts": {
    "build": "webpack --entry ./src/index.ts --config ./node_modules/@oliveai/ldk/dist/webpack/config.js",
    "test": "jest --maxWorkers=1",
    "test:coverage": "npm run test -- --collect-coverage",
    "lint": "eslint ./ --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix"
  },
  "author": "Amit Shukla",
  "license": "MIT",
  "devDependencies": {
    "@types/common-tags": "^1.8.1",
    "@types/jest": "^27.0.2",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.0.0",
    "typescript": "^4.2.4",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "eslint": "^7.30.0",
    "jest": "^27.2.4",
    "prettier": "^2.3.2"
  },
  "dependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-async-to-generator": "^7.13.0",
    "@babel/plugin-transform-destructuring": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/runtime": "^7.13.10",
    "@babel/runtime-corejs2": "^7.13.10",
    "@oliveai/ldk": "3.9.0",
    "babel-loader": "^8.2.2",
    "common-tags": "^1.8.0",
    "core-js": "^3.12.1",
    "date-fns": "^2.21.3",
    "terser-webpack-plugin": "^5.1.1",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0",
    "webpack-merge": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        },
        "isolatedModules": true
      }
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.{ts,js}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/jestGlobalSetup.js"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,js}"
    ]
  },
  "ldk": {
    "permissions": {
      "clipboard": {},
      "filesystem": {},
      "keyboard": {},
      "network": {
        "urlDomains": [
          {
            "value": "*.fda.gov"
          },
          {
            "value": "raw.githubusercontent.com"
          }
        ]
      },
      "window": {},
      "ui": {},
      "whisper": {}
    }
  }
}